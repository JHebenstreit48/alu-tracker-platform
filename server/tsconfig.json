{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]                             // âœ… Add this line
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
